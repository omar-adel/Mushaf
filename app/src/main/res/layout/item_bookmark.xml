<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="?android:selectableItemBackground"
        android:id="@+id/item_bookmark_root_view"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    <ImageButton
            android:id="@+id/remove_bookmark"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_remove_circle_outline"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_width="@dimen/action_image_size"
            android:layout_height="@dimen/action_image_size"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"/>

    <LinearLayout
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_marginTop="10dp"
                style="@style/AppTheme.Text.Normal"
                tools:text="Surat Al-Bagarah"
                android:id="@+id/surah_name_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                tools:text="page 3, juz'1, ayah 7"
                style="@style/AppTheme.Text.Secondary.Bold"
                android:id="@+id/info_bookmark"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </LinearLayout>
</RelativeLayout>