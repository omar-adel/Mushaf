<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:id="@+id/surah_name_view_root"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layoutDirection="rtl"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="100dp" tools:targetApi="jelly_bean_mr1">
        <View
                app:layout_constrainedWidth="true"
                android:background="@drawable/ic_surah_name_decor"
                android:id="@+id/decor_surah1"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/surahNameArabic_read_page"
                android:layout_toRightOf="@+id/surahNameArabic_read_page"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/decor_surah3"
                app:layout_constraintEnd_toStartOf="@+id/decor_surah4"/>
        <View
                android:rotation="180"
                app:layout_constrainedWidth="true"
                android:background="@drawable/ic_surah_name_decor"
                android:id="@+id/decor_surah2"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/surahNameArabic_read_page"
                android:layout_toRightOf="@+id/surahNameArabic_read_page"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/decor_surah3"
                app:layout_constraintEnd_toStartOf="@+id/decor_surah4"/>
        <View
                android:rotation="180"
                android:background="@drawable/ic_surah_name_decor2"
                android:id="@+id/decor_surah3"
                android:layout_width="30dp"
                android:layout_height="@dimen/_38sdp"
                app:layout_constrainedHeight="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/surahNameArabic_read_page"
                android:layout_toRightOf="@+id/surahNameArabic_read_page"
                app:layout_constraintBottom_toBottomOf="@+id/surahNameArabic_read_page"
                app:layout_constraintTop_toTopOf="@+id/surahNameArabic_read_page"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="1dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="1dp"/>
        <View
                android:background="@drawable/ic_surah_name_decor2"
                android:id="@+id/decor_surah4"
                android:layout_width="30dp"
                android:layout_height="@dimen/_38sdp"
                app:layout_constrainedHeight="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/surahNameArabic_read_page"
                android:layout_toRightOf="@+id/surahNameArabic_read_page"
                app:layout_constraintBottom_toBottomOf="@+id/surahNameArabic_read_page"
                app:layout_constraintTop_toTopOf="@+id/surahNameArabic_read_page"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="1dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="1dp"/>
        <TextView
                tools:text="الفاتحة"
                android:textSize="32dp"
                android:textStyle="bold"
                android:fontFamily="@font/title_en"
                android:layout_centerInParent="true"
                android:id="@+id/surahNameArabic_read_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/decor_surah2"
                app:layout_constraintTop_toBottomOf="@+id/decor_surah1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
            android:layout_marginBottom="5dp"
            android:id="@+id/bismillah_page"
            android:layout_marginTop="12dp"
            tools:srcCompat="@drawable/ic_bismillah_dark"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_34sdp"/>
</LinearLayout>